<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
    android:layout_height="wrap_content" >   "

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay"
    android:layout_width="fill_parent"
    android:layout_height="459dp"
    android:background="@drawable/bg" >

    <EditText
        style="@style/question"
        android:id="@+id/a_Question"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="EditText"
        android:textSize="18dp" 
        android:layout_marginTop="10dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="25dp" >
    </EditText>

    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/a_Choices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/a_Question"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/a_Choice1"
            style="@style/choice"
            android:text="RadioButton" >
        </RadioButton>

        <RadioButton
            android:id="@+id/a_Choice2"
            style="@style/choice"
            android:text="RadioButton" >
        </RadioButton>

        <RadioButton
            android:id="@+id/a_Choice3"
            style="@style/choice"
            android:text="RadioButton" >
        </RadioButton>

        <RadioButton
            android:id="@+id/a_Choice4"
            style="@style/choice"
            android:text="RadioButton" >
        </RadioButton>
    </RadioGroup>

    <Button
        style="@style/button"
        android:id="@+id/a_Prev"
        android:layout_alignBaseline="@+id/a_Next"
        android:layout_below="@+id/a_Choices"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Prev" />
<Button
        style="@style/button"
        android:id="@+id/a_Next"
        android:layout_below="@+id/a_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/a_Prev"
        android:layout_marginLeft="45dp"
        android:text="Next" />    
    
    <Button
        style="@style/button"
        android:id="@+id/a_Exit"
        android:layout_alignBaseline="@+id/a_Next"
        android:layout_alignBottom="@+id/a_Next"
        android:layout_alignParentRight="true"
        android:text="Exit" />

    <TextView
        android:id="@+id/a_msg"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a_Choices"
        android:layout_marginTop="15dp"
        android:text="Medium Text"
        android:layout_marginLeft="7dp"
        android:layout_width="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:background="@drawable/border_circle"
        android:id="@+id/a_qno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/a_Question"
        android:layout_alignBottom="@+id/a_Question"
        android:layout_alignParentLeft="true"
        android:text="Small Text"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>

</ScrollView> 